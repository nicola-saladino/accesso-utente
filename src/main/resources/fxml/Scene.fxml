<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.etlabora.tdp.EsercizioPassword.FXMLController">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtInserisciPassword" promptText="Inserisci password">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <TextField fx:id="txtInserisciNome" promptText="Inserisci nome utente">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </TextField>
            <Label fx:id="lblNumeroTentativiRimasti">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </center>
   <bottom>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnAccediId" alignment="TOP_CENTER" mnemonicParsing="false" onAction="#btnAccedi" prefWidth="200.0" text="Accedi" translateX="105.0">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Button>
            <Label fx:id="lblInformazione" alignment="TOP_CENTER" prefWidth="300.0" translateX="-65.0" translateY="60.0" />
         </children>
      </HBox>
   </bottom>
   <left>
      <Button mnemonicParsing="false" onAction="#btnPulisciCampi" text="Clear" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Button>
   </left>
</BorderPane>
